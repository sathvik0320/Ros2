<?xml version ="1.0"?>
<robot name = "car">
   <!-- we use radians not degrees 90^.is 1,57-->
   <!-- link is the rigid part of the robot base_link will base of the car-->
   <material name ="white">
      <color rgba ="1 1 1 1" />
   </material>

   <material name="black">
     <color rgba ="0 0 0 1" />
   </material>

   <!-- base foot print -->
   <link name="base_footprint" >
   </link>

   <!-- base -->
   <link name ="base_link">
      <visual>
        <geometry>
             <box size ="0.6 0.4 0.2" />
        </geometry>
        <origin xyz="0 0 0.1" rpy="0 0 0" />
        <material name="white" />
      </visual>
   </link>

   <!-- camera -->
   <link name="camera" >
       <visual>
          <geometry>
               <cylinder length="0.05" radius="0.1" />
          </geometry>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <material name="black" />
       </visual>
   </link>

   <!-- left_wheel -->
   <link name="l_wheel">
     <visual>
        <geometry>
             <cylinder length="0.05" radius="0.1" />
        </geometry>
        <origin xyz="0 0 0" rpy="1.57 0 0" />
        <material name="black" />
     </visual>
   </link>

   <!-- rigth_wheel -->
   <link name="r_wheel" >
    <visual>
        <geometry>
           <cylinder length="0.05" radius="0.1" />
        </geometry>
        <origin xyz="0 0 0" rpy="1.57 0 0" />
        <material name="black" />
    </visual>
   </link>

   <link name="caster_wheel">
     <visual>
       <geometry>
           <sphere radius="0.05" />
       </geometry>
       <origin xyz="0 0 0" rpy="0 0 0" />
       <material name="black" />
     </visual>
   </link>


   <!-- between virtual footprint and base --> 
   <joint name="base_joint" type="fixed" >
     <parent link="base_footprint" />
     <child link ="base_link" />
     <origin xyz="0 0 0.1" rpy="0 0 0" />
   </joint>

   <!-- joint between -->
   <joint name="camera_base" type ="continuous" >
     <parent link="base_link" />
     <child link="camera" />
     <origin xyz="0 0 0.225" rpy="0 0 0" />
   </joint>

   <!--joint between -->
   <joint name="lwheel_base" type="continuous">
      <parent link="base_link" />
      <child link ="l_wheel" />
      <origin xyz="-0.15 0.225 0" rpy="0 0 0" />
      <!-- axis of rotation for wheel -->
      <axis xyz="0 1 0"  />
   </joint> 

   <!-- joint between -->
   <joint name="rwheel_base" type="continuous" >
       <parent link="base_link" />
       <child link="r_wheel" />
       <origin xyz="-0.15 -0.225 0" rpy="0 0 0"  />
       <axis xyz="0 1 0"  />
   </joint>

   <!-- caster wheel -->
   <joint name="caster_base" type="fixed" >
       <parent link="base_link" />
       <child link ="caster_wheel" />
       <origin xyz="0.225 0 -0.05" rpy="0 0 0" />
   </joint>

</robot>
